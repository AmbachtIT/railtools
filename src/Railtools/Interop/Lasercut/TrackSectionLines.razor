@using Railtools.Geometry
@using Railtools.Tracks.Layouts
@foreach (var trajectory in Value.Trajectories)
{
	<VectorGeometry Value="@CreateGeometry(trajectory)" Fill="none" Stroke="@Value.Fill" StrokeWidth="1" />
}


@code
{
	[Parameter()]
	public Section Value { get; set; }

	private Geometry CreateGeometry(ITrajectory trajectory)
	{
		return trajectory.Buffer(Value.Gauge / 2);
	}
}
