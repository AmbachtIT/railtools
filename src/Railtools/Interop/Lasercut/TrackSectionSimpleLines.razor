@using Railtools.Geometry
@using Railtools.Tracks.Layout
@inherits Ambacht.Common.Blazor.Components.PolymorphicChildComponent<SimpleSection>
@if (Value != null)
{
	<VectorGeometry Value="@CreateGeometry()" Fill="none" Stroke="@Value.Fill" StrokeWidth="1" />
}

@code
{
	private Geometry CreateGeometry()
	{
		return Value.Trajectory.Buffer(Value.Gauge / 2);
	}
}
