@using NetTopologySuite.Features
<VectorGeometry 
	Value="@Value.Geometry" 
	Fill="@Fill"
	Stroke="@Stroke"
	StrokeWidth="@StrokeWidth" />

@code {
	[Parameter()]
	public IFeature Value { get; set; } 
	
	private string Fill => Value.Fill().Get() ?? "none";
	private string Stroke => Value.Stroke().Get() ?? "none";

	private float StrokeWidth
	{
		get
		{
			var result = Value.StrokeWidth().Get();
			if (result == 0)
			{
				return 1;
			}

			return result;
		}
	}

}

